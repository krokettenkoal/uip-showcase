{
  "openapi": "3.0.3",
  "info": {
    "title": "Showcase API",
    "description": "API for FHStP Showcase",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "/api",
      "description": "Local API server"
    }
  ],
  "tags": [
    {
      "name": "studyprogram",
      "description": "Study program related endpoints"
    },
    {
      "name": "course",
      "description": "Course related endpoints"
    },
    {
      "name": "session",
      "description": "Session related endpoints"
    },
    {
      "name": "example",
      "description": "Example related endpoints"
    },
    {
      "name": "source",
      "description": "Source code related endpoints"
    },
    {
      "name": "sourcetype",
      "description": "Source code type related endpoints"
    }
  ],
  "components": {
    "schemas": {
      "BaseStudyProgram": {
        "title": "BaseStudyProgram",
        "type": "object",
        "description": "Base class of a study program at St. Pölten UAS (used for creating a new study program)",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The study program title (acronym)"
          },
          "subtitle": {
            "type": "string",
            "description": "The study program subtitle (full name)"
          }
        }
      },
      "BaseCourse": {
        "title": "BaseCourse",
        "type": "object",
        "description": "Base class of a course (LV) in a study program (used for creating a new course)",
        "required": [
          "title",
          "studyProgramId"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The course title"
          },
          "subtitle": {
            "type": "string",
            "description": "The course subtitle (optional)"
          },
          "studyProgramId": {
            "type": "integer",
            "description": "The id of the study program the course belongs to"
          },
          "moodleUrl": {
            "type": "string",
            "description": "The URL of the course in Moodle aka eCampus (optional)"
          }
        }
      },
      "BaseSession": {
        "title": "BaseSession",
        "type": "object",
        "description": "Base class of a session (lecture or exercise) of a course (used for creating a new session)",
        "required": [
          "courseId",
          "title"
        ],
        "properties": {
          "courseId": {
            "type": "integer",
            "description": "The id of the course the session belongs to"
          },
          "title": {
            "type": "string",
            "description": "The session title, e.g. 'Lecture 1'"
          },
          "subtitle": {
            "type": "string",
            "description": "The session subtitle (optional)"
          },
          "image": {
            "type": "string",
            "description": "The session image (optional)"
          },
          "date": {
            "type": "string",
            "description": "The date of the session (optional)"
          }
        }
      },
      "BaseExample": {
        "title": "BaseExample",
        "type": "object",
        "description": "Base class of a code example as demonstrated in a session (used for creating a new example)",
        "required": [
          "sessionId",
          "title"
        ],
        "properties": {
          "sessionId": {
            "type": "integer",
            "description": "The id of the session the example belongs to"
          },
          "title": {
            "type": "string",
            "description": "The example title, e.g. 'Example 1', To-do List'"
          },
          "subtitle": {
            "type": "string",
            "description": "The example subtitle (optional)"
          },
          "icon": {
            "type": "string",
            "description": "The example icon (optional)"
          },
          "image": {
            "type": "string",
            "description": "The example image (optional)"
          },
          "component": {
            "type": "string",
            "description": "The name of the component showcasing the example, e.g. 'TodoList' (optional)"
          }
        }
      },
      "BaseSource": {
        "title": "BaseSource",
        "type": "object",
        "description": "Base class of a source code of an example (used for creating a new source code)",
        "required": [
          "exampleId",
          "typeId",
          "code",
          "priority"
        ],
        "properties": {
          "exampleId": {
            "type": "integer",
            "description": "The id of the example the source belongs to"
          },
          "typeId": {
            "type": "integer",
            "description": "The type (language/framework) id of the source"
          },
          "title": {
            "type": "string",
            "description": "The title of the source code, e.g. 'index.html', 'main.js', to show instead of the source type name (optional)"
          },
          "code": {
            "type": "string",
            "description": "The source code"
          },
          "priority": {
            "type": "integer",
            "description": "The priority of the source code, affecting the order of the sources in the UI. The higher the priority, the farther the source code tab is to the left. Defaults to 0.",
            "default": 0
          }
        }
      },
      "BaseSourceType": {
        "title": "BaseSourceType",
        "type": "object",
        "description": "Base class of a type (language/framework) of a source code",
        "required": [
          "title"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the source type, e.g. 'Svelte', 'React', 'Vanilla', 'HTML', 'CSS', 'JavaScript'"
          },
          "icon": {
            "type": "string",
            "description": "The icon of the source type (optional)"
          },
          "language": {
            "type": "string",
            "description": "The language of the source type used for syntax highlighting (optional)"
          }
        }
      },
      "StudyProgram": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseStudyProgram"
          },
          {
            "title": "StudyProgram",
            "type": "object",
            "description": "A study program at St. Pölten UAS",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The study program id"
              }
            }
          }
        ]
      },
      "Course": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseCourse"
          },
          {
            "title": "Course",
            "type": "object",
            "description": "A course (LV) in a study program",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The course id"
              }
            }
          }
        ]
      },
      "Session": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseSession"
          },
          {
            "title": "Session",
            "type": "object",
            "description": "A session (lecture or exercise) of a course",
            "required": [
              "id",
              "courseId",
              "title"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The session id"
              }
            }
          }
        ]
      },
      "Example": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseExample"
          },
          {
            "title": "Example",
            "type": "object",
            "description": "A code example as demonstrated in a session",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The example id"
              }
            }
          }
        ]
      },
      "Source": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseSource"
          },
          {
            "title": "Source",
            "type": "object",
            "description": "A source code of an example",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The (internal) id of the source"
              }
            }
          }
        ]
      },
      "SourceType": {
        "allOf": [
          {
            "$ref": "#/components/schemas/BaseSourceType"
          },
          {
            "title": "SourceType",
            "type": "object",
            "description": "A type (language/framework) of a source code",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "integer",
                "description": "The (internal) id of the source type"
              }
            }
          }
        ]
      }
    }
  },
  "paths": {
    "/course": {
      "get": {
        "operationId": "getCourses",
        "summary": "All courses",
        "description": "Retrieve all courses.",
        "tags": [
          "course"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Course"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createCourse",
        "summary": "Create course",
        "description": "Create a new course.",
        "tags": [
          "course"
        ],
        "requestBody": {
          "description": "The course to create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BaseCourse"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/course/{id}": {
      "get": {
        "operationId": "getCourseById",
        "summary": "Course by id",
        "description": "Retrieve a course by its id.",
        "tags": [
          "course"
        ],
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "operationId": "updateCourse",
        "summary": "Update course",
        "description": "Update details of an existing course.",
        "tags": [
          "course"
        ],
        "parameters": [{
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }],
        "requestBody": {
          "description": "The course to update",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BaseCourse"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/session": {
      "get": {
        "operationId": "getSessionsByCourse",
